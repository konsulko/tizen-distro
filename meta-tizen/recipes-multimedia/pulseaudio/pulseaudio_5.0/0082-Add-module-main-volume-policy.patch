+}
+
+static int model_from_string(const char *str, enum model *model) {
+    pa_assert(str);
+    pa_assert(model);
+
+    if (pa_streq(str, "none"))
+        *model = MODEL_NONE;
+    else if (pa_streq(str, "by-active-main-volume-context"))
+        *model = MODEL_BY_ACTIVE_MAIN_VOLUME_CONTEXT;
