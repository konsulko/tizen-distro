+static const char *model_to_string(enum model model) {
+    switch (model) {
+        case MODEL_NONE:
+            return "none";
+
+        case MODEL_BY_ACTIVE_MAIN_VOLUME_CONTEXT:
+            return "by-active-main-volume-context";
+    }
+
