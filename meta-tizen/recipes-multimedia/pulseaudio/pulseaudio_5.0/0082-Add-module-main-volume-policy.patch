+static void context_unlink(struct context *context) {
+    pa_assert(context);
+
+    if (context->unlinked)
+        return;
+
+    context->unlinked = true;
+
+    if (context->main_volume_context) {
+        pa_main_volume_context_free(context->main_volume_context);
+        context->main_volume_context = NULL;
+    }
